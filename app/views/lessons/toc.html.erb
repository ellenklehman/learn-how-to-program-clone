<h1>Table of contents</h1>

<ul>
  <% @chapters.each do |chapter| %>
    <li><%= chapter.name %></li>
    <ul>
      <% chapter.sections.each do |section| %>
        <li><%= section.name %></li>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li><a href= '/<%= lesson.name%>'><%= lesson.name %></a></li>
          <% end %>
        </ul>
      <% end %>
    </ul>
  <% end %>
</ul>
